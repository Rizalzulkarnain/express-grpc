{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "parser": "@typescript-eslint/parser",
  "extends": [
    "standard",
    "plugin:eslint/recommended",
    "plugin:jest/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": "2"
  },
  "env": {
    "node": true,
    "jest/global": true
  },
  "settings": {
    "jest": {
      "version": 26
    }
  }
}
